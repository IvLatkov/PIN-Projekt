@model PINprojekt_Ivan_Latkovic.Models.Knjiga

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Knjiga</h2>
<br />
<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Ime"></label>
            </div>
            <div class="col-6">
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Autor"></label>
            </div>
            <div class="col-6">
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RedniBroj"></label>
            </div>
            <div class="col-6">
                <input asp-for="RedniBroj" class="form-control" />
                <span asp-validation-for="RedniBroj" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id!=0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-success form-control">Natrag na listu</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
 }
